<div class="idea-forms col-xs-11 col-sm-4">
  <div class="idea-create">
    <h1 class="appname">ideabox</h1>
    <form id="ajax-create-idea" action="/creat" method="post">
      <input type="text" name="title" id="title" placeholder="idea title" class="form-control idea-title" required maxlength="35">
      <textarea name="body" id="body" placeholder="idea body" class="form-control idea-body" required maxlength="100"></textarea>
      <input type="submit" name="commit" value="save" id:"idea-save" class="btn btn-primary idea-save">
    </form>
  </div>
</div>
