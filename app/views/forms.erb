<div class="idea-forms">
  <div class="idea-create">
    <div class="col-xs-11">
      <form id="ajax-create-idea" action="/creat" method="post">
        <input type="text" name="title" id="title" placeholder="idea title" class="form-control idea-title" require="require" maxlength="50">
        <input type="text" name="body" id="body" placeholder="idea body" class="form-control idea-body" require="require" maxlength="100">
        <input type="submit" name="commit" value="save" id:"idea-save" class="btn btn-primary idea-save">
      </form>
    </div>
  </div>
</div>
